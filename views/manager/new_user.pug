extends ../layout

block content
  .container
    h2.main-title 회원가입
    form(action='/managers/user/new', method='POST')
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', placeholder='Your name')
      .form-group
        label(for='email') Email address
        input.form-control#email(type='email', name='email', placeholder='Email')
      .form-group
        label(for='password') Password
        input.form-control#password(type='password', name='password', placeholder='Password')
      .form-group
        label(for='password_confirmation') Password Confirmation
        input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password')
      .form-group
        label(for='role') 권한
        select#role.custom-select(name = 'role')
          option(value='user' selected) user
          option(value='guide') guide
          option(value='manager') manager
      button.btn.btn-primary(type='submit') 회원가입 