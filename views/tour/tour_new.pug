extends ../layout

block content
  .container
    nav(aria-label='breadcrumb')
      ol.breadcrumb
        li.breadcrumb-item.active(aria-current='page') 정보 등록
        li.breadcrumb-item 코스 등록
    h2 정보 등록
    form(action = "/tours/new", method = 'post')
      .place.d-flex.flex-row
        .form-group
          .input-group.mb-3
            .input-group-prepend
              label.input-group-text.p(for='country') 나라
            select#country.custom-select(name = 'contry', onchange= 'Onchange()')
              each place in contry
                option(value=place)=place
              option(value='etc' selected) 기타
        .form-group
          .input-group.mb-3
            .input-group-prepend
              label.input-group-text.p(for='city') 도시
            select#city.custom-select(name = 'city')
              option(value='etc' selected) 기타
      .form-group
        label(for='title') 여행 제목
        input.form-control#title(type='text', name='title')
      .form-group
        label(for='main_photo') 여행 사진
        input.form-control-file#file(type="file")
        input#url.form-control(type="text", readonly="readonly", name="main_photo", value="")
        img#preview.img-fluid(src="https://dummyimage.com/200x200/ccc/fff")
      .form-group
        label(for='description') 여행 설명
        textarea.form-control#description( name='description', rows = '5',placeholder = "여행 상품 설명을 적어주세요.")
      .form-group
        label(for='price') 여행 가격
        .input-group.mb-3
          input.form-control(type='text', name = "price",placeholder="1인당 가격을 적어주세요.", aria-label="price", aria-describedby='price')
          .input-group-append
            span#price.input-group-text 원
      .form-group
        label(for='max_people') 최대 인원
        input.form-control#max_people(type='text', name='max_people')
      button.btn.btn-primary(type='submit') 코스 등록으로 넘어가기
      script(src='/javascripts/interactcity.js')
  script(src="/javascripts/image.js")