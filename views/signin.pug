extends layout

block content
  .container
    .clearfix
      form(action='/signin', method='POST')
        h3 로그인
        .form-group
          label(for='email') Email address
          input#email.form-control(type='email', name='email', placeholder='Email address', required, autofocus)
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder='Password', required, autofocus)
        button.btn.btn-primary.btn-block(type='submit') Signin
      div.sub 
        a(href='/users/new') Signup